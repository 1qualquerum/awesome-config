#! /bin/sh

### Bspwm Config ###

# Workspaces
bspc monitor -d 1 2 3 4 5

# Window Settings

# ~/.bin/wm.bspwm_dual_borders & 

bspc config border_width 	  0
bspc config window_gap            15

# Colors 
bspc config focused_border_color  "#191919"
bspc config normal_border_color   "#191919"
bspc config presel_feedback_color "#4C4C4C"

bspc config split_ratio           0.5
bspc config borderless_monocle    true
bspc config gapless_monocle       true

bspc config focus_follows_pointer true


### Autostart Apps ###

# Key Daemon
sxhkd -c ~/.config/bspwm/sxhkdrc & 

# Polybar
~/.bin/hidebar &

# Power Manager
xfce4-power-manager &

# Restore Xresources
xrdb -load ~/.Xresources &

# Background
hsetroot -solid "#4d5a60" &

# Compositor
~/.bin/picom &

# Network Manager
# nm-applet &

# Handles cursor problem
xsetroot -cursor_name left_ptr &

# Load Bitmap Fonts
xset +fp ~/.local/share/fonts &
xset fp rehash &
xset fp+ /usr/share/fonts/bitmap &


### Window Rules ###

bspc rule -a "polybar" state=above &
